   "cell_type": "code",
   "execution_count": 136,
   "metadata": {},
   "outputs": [],
   "source": [
    "def get_empties(obs):\n",
    "\n",
    "    row_loc = []\n",
    "    col_loc = []\n",
    "\n",
    "    for j, row in enumerate(obs):\n",
    "        if all(row == '.'):\n",
    "            row_loc.append(j)\n",
    "\n",
    "    for j, col in enumerate(obs.T):\n",
    "        if all(col == '.'):\n",
    "            col_loc.append(j)\n",
    "\n",
    "    return row_loc, col_loc\n"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 61,
   "metadata": {},
   "outputs": [],
   "source": [
    "def expand_map(obs):\n",
    "\n",
    "    row_loc = []\n",
    "    col_loc = []\n",
    "\n",
    "    for j, row in enumerate(obs):\n",
    "        if all(row == '.'):\n",
    "            row_loc.append(j)\n",
    "\n",
    "    for j, col in enumerate(obs.T):\n",
    "        if all(col == '.'):\n",
    "            col_loc.append(j)\n",
    "\n",
    "    obs = np.insert(obs, row_loc, obs[row_loc[0]], axis = 0)\n",
    "    obs = np.insert(obs, col_loc, obs[:, [col_loc[0]]], axis=1)\n",
    "\n",
    "    return obs\n"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 67,
   "metadata": {},
   "outputs": [],
   "source": [
    "expand_str = '\\n'.join([''.join(line) for line in expand_map(tst)])"
   ]
